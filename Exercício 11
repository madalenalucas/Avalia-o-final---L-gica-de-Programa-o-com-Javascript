    <script>
        var numeros = [25,30,45,28,0,12,78,64]
        var soma = 0;
        for (var i = 0;i<numeros.length;i++)
        {
            if(numeros[i]%2 == 0)
            {
                soma += numeros[i]
            }
        }                           
        alert('A soma dos números pares é: ' + soma)
    </script>
